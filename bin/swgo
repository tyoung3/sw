#!/bin/bash 

# SWGO  script.   Create and run a StreamWork .SW program.

Die () {
	echo "swgo/DIE: $*"
	exit 1
}

SW=$GOPATH/bin/sw
[ -e $SW     ] || Die $SW is missing 
[ -f go.mod  ] || [ -f ../go.mod ]  || Die go.mod is missing

GenRun() {
	base=`basename $file`
	swfile=${file}.sw
	if [ -f $swfile ]; then
		$SW $swfile > /tmp/$base.go
		go run /tmp/$base.go
	else 
		echo $swfile missing
	fi
}

Run() {	
	for file in $*; do 
		GenRun $file
	done 
}

case $1 in 
	
	*)Run $*;;
esac	
